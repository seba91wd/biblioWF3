{% extends 'base.html.twig' %}

{% block title %}Livre
{% endblock %}

{% block body %}
	<h1>Livre</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ livre.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ livre.titre }}</td>
			</tr>
			<tr>
				<th>Auteur</th>
				<td>
                    <a href="{{ path('app_admin_auteur_show', {id: livre.auteur.id}) }}" class="btn btn-secondary">
                        {{ livre.auteur.nom }} {{ livre.auteur.prenom }}
                    </a>
                </td>
			</tr>
			<tr>
				<th>Resume</th>
				<td>{{ livre.resume }}</td>
			</tr>
			<tr>
				<th>Couverture</th>
                <td><img src="/images/{{ livre.couverture }}"</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('app_admin_livre_index') }}">back to list</a>

	<a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">edit</a>

	{{ include('admin/livre/_delete_form.html.twig') }}
{% endblock %}
