{% extends 'base.html.twig' %}

{% block title %}Ajouter livre{% endblock %}

{% block body %}
    <form method="post" class="mb-3">
        <div class="form-group">
            <label for="titre">Titre</label>
            <input type="text" class="form-control" name="titre" id="titre" >
        </div>

        <div class="form-group">
            <label for="couverture">Couverture</label>
            <input type="file" class="form-control" name="couverture" id="couverture">
        </div>

        <div class="form-group">
            <label for="couverture">Résumé</label>
            <textarea name="resume" id="resume" class="form-control"></textarea>
        </div>


        <div class="d-flex justify-content-between my-3">
            <button class="btn btn-primary">Enregistrer</button>
            <button type="reset" class="btn btn-warning">Effacer</button>
        </div>
    </form>

{% endblock %}
